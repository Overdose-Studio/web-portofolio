# app settings
NODE_ENV = development                                      # development or production
PORT = 5000                                                 # port to run the backend on (default 5000)
HOST = localhost                                            # host to run the backend on (default localhost)
DEBUG_MODE = false                                          # enable debug mode (default false)

# logging settings
LOG_LEVEL = debug                                           # log level (default debug)
LOG_FILE = app.log                                          # log file (default app.log)
LOG_DIRECTORY = logs                                        # log directory (default logs)
LOG_INTERVAL = 1d                                           # log interval (default 1d)
LOG_MAX_FILES = 5                                           # max log files (default 5)
LOG_COMPRESS = true                                         # compress logs (default true)
LOG_TIMEZONE = UTC                                          # log timezone (default UTC)