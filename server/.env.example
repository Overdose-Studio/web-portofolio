# app settings
NODE_ENV = development                                      # development or production
PORT = 5000                                                 # port to run the backend on (default 5000)
HOST = localhost                                            # host to run the backend on (default localhost)
DEBUG_MODE = false                                          # enable debug mode (default false)

# database settings
DB_URI = mongodb://localhost:27017                          # database uri (default mongodb://localhost:27017)
DB_NAME = test                                              # database name (default test)

# cors settings
CORS_ORIGIN = *                                             # cors origin (default *)
CORS_CREDENTIALS = true                                     # cors credentials (default true)

# form body settings
FORM_BODY_LIMIT = 1048576                                   # form body limit (default 1mb)

# cookie settings
COOKIE_DOMAIN = localhost                                   # cookie domain (default localhost)
COOKIE_HTTP_ONLY = true                                     # cookie http only (default true)
COOKIE_MAX_AGE = 86400000                                   # max age of the cookie in ms (default 24 hours)
COOKIE_SECURE = false                                       # cookie secure (default false)
COOKIE_SIGNED = true                                        # sign the cookie (default true)
COOKIE_SECRET = cookie-secret

# logging settings
LOG_COMPRESS = true                                         # compress logs (default true)
LOG_DIRECTORY = logs                                        # log directory (default logs)
LOG_FILE = app.log                                          # log file (default app.log)
LOG_INTERVAL = 1d                                           # log interval (default 1d)
LOG_LEVEL = debug                                           # log level (default debug)
LOG_MAX_FILES = 7                                           # max log files (default 7)
LOG_TIMEZONE = UTC                                          # log timezone (default UTC)